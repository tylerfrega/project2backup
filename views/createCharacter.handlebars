 <h2 class="page-header">Create a Character</h2>



<form>
   <div class="form-group">
    <label>Character Name</label>
    <input type="text" class="form-control" id="characterName" placeholder="CharacterName">
  </div>

  <div class="form-group">
    <label>Character Lore</label>
    <input type="text" class="form-control" id="characterLore" placeholder="Character Lore">
  </div>

</form>  
  
  
<h3>Select Character Class</h3>
  <button class="btn-btn-default classBtn" id="createArcher" data-className="Archer">Archer</button>
  <button class="btn-btn-default classBtn" id="createMage" data-className="Mage">Mage</button>
  <button class="btn-btn-default classBtn" id="createWarrior" data-className="Warrior">Warrior</button>

  <h4 id="selectWeaponText">Select Your Weapon</h4>
  <div id="archerWeaponsHolder"></div>
  <div id="mageWeaponsHolder"></div>
  <div id="warriorWeaponsHolder"></div>


  <button id="submitCharacter" type="submit">Create Character</button>







 <script src="js/characterPage.js"></script>